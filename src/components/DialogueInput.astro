<div class="input-fields">
    <table>
        <tr>
            <td>
                <input
                    type="text"
                    id="character"
                    autocomplete="off"
                    placeholder='Character name here...'
                />
            </td>
            <td>
                <button id="generate">Generate</button>
            </td>
            <td rowspan="2" style="vertical-align: top;">
                <input
                    type="color"
                    id="color"
                    autocomplete="off"
                    value="#ffffff"
                    style="top: 4px; position:relative;"
                />
            </td>
        </tr>
        <tr>
            <td>
                <textarea
                    id="dialog"
                    autocomplete="off"
                    placeholder='What the character will be saying...'
                    style="top: -4px; position: relative;"
                />
            </td>
            <td style="vertical-align: top;">
                <select id="size" name="Size" style="position: inherit;">
                    <option value="100">100%</option>
                    <option value="75">75%</option>
                    <option value="50">50%</option>
                    <option value="25">25%</option>
                    <option value="10">10%</option>
                </select>
            </td>
        </tr>

        <th colspan="3">
            Character
        </th>
        <tr>
            <td>
                <input
                    type="text"
                    id="lcr"
                    autocomplete="off"
                    placeholder='Image Link for the Character...'
                />
            </td>
            <td colspan="2">
                <button id="rlc">Reload Char</button>
            </td>
        </tr>
        <tr>
            <td colspan="3" class="wholerow">
                <label class="whole-row" for="char-img-up">
                    Upload Character image...
                    <input type="file" id="char-img-up">
                </label>
            </td>
        </tr>

        <th colspan="3">
            Background
        </th>
        <tr>
            <td>
                <input
                    type="text"
                    id="lbg"
                    autocomplete="off"
                    placeholder='Image Link for the Background...'
                />
            </td>
            <td colspan="2">
                <button id="rlbg">Reload BG</button>
            </td>
        </tr>
        <tr>
            <td colspan="3" class="wholerow">
                <label class="whole-row" for="bg-img-up">
                    Upload Background image...
                    <input type="file" id="bg-img-up">
                </label>
            </td>
        </tr>
        <!-- <tr>
            <td colspan="3" class="wholerow">
                <button class="whole-row">Choose from the BG pack...</button>
            </td>
        </tr> -->

        <th>
            Other
        </th>
        <!-- <tr>
            <td>
                <label for="arr">
                    <input
                        type="checkbox"
                        id="arr"
                        autocomplete="off"
                        value="arrow"
                    />
                    <p>Include Arrow</p>
                </label>
                <label for="diaops">
                    <input
                        type="checkbox"
                        id="diaops"
                        autocomplete="off"
                        value="arrow"
                    />
                    <p>Include Dialogue Options</p>
                </label>
            </td>
        </tr> -->
        <tr>
            <td colspan="3" class="wholerow" id="clear-char">
                <button class="whole-row">Clear Character</button>
            </td>
        </tr>
        <tr>
            <td colspan="3" class="wholerow" id="clear-bg">
                <button class="whole-row">Clear Background</button>
            </td>
        </tr>
        <tr>
            <td colspan="3" class="wholerow" id="enable-sizing">
                <button class="whole-row" style="margin-bottom: 8px;">Enable Sizing Tools</button>
            </td>
        </tr>
    </table>
</div>

<style>
    div.input-fields {
        width: fit-content;
        margin: auto;
        background-color: var(--darkerer);
        border-radius: 4px;
        box-shadow: 0 0 16px black;
    }

    div > table {
        margin: auto;
    }

    th {
        text-align: left;
        padding-left: 8px;
        padding-top: 8px;
    }

    input, textarea {
        width: 256px;
        height: 32px;
        font-family: "pretendard";
        padding: 4px;
        padding-left: 8px;
        margin: 4px;
        outline: none;
        border: 0;
        background-color: var(--dark);
        border-radius: 4px;
        caret-color: white;
        color: lightgray;
        font-size: 16px;
    }

    label > input {
        width: 24px;
        height: 24px;
        margin: 8px;
        border-radius: 4px;
    }

    label {
        height: 40px;
        display: flex;
        align-content: center;
        justify-content: left;
    }

    label > p {
        margin: auto 0;
        display: inline-flex;
    }

    textarea {
        min-width: 256px;
        max-width: 256px;
        min-height: 32px;
    }

    input#subtext {
        margin-top: 0;
    }

    select#size {
        width: 90px;
        height: 40px;
        padding-left: 8px;
        font-size: 16px;
        top: -2px; /* perfectionism */
        background-color: var(--darker);
        color: lightgray;
        border: none;
        border-radius: 4px;
        font-family: 'pretendard', sans-serif;
        position: relative;
    }

    button {
        all: unset;
    }

    button:focus {
        outline: revert;
    }

    input#color {
        width: 40px;
        height: 90px;

        margin: 0;
        padding: 0px 2px;
    }

    button#generate {
        width: 90px;
        height: 40px;
        background-color: var(--darker);
        border-radius: 4px;
        color: lightgray;
        font-family: "pretendard";
        text-align: center;

        transition-property: color, background-color, box-shadow;
        transition-duration: 0.1s;
        transition-timing-function: ease-in-out;

        margin-left: 0px;
        margin-right: 4px;
    }

    label.whole-row, button.whole-row {
        width: 100%;
        height: 30px;
        background-color: var(--darker);
        border-radius: 4px;
        color: lightgray;
        font-family: "pretendard";
        text-align: center;

        transition-property: color, background-color, box-shadow;
        transition-duration: 0.1s;
        transition-timing-function: ease-in-out;
        justify-content: center;
        align-items: center;
    }

    button#rlc, button#rlbg {
        width: 138px;
        height: 40px;
        background-color: var(--darker);
        border-radius: 4px;
        color: lightgray;
        font-family: "pretendard";
        text-align: center;

        transition-property: color, background-color, box-shadow;
        transition-duration: 0.1s;
        transition-timing-function: ease-in-out;

        margin-left: 0px;
        margin-right: 4px;
    }

    button#generate:hover, button#rlc:hover, button#rlbg:hover, label.whole-row:hover, button.whole-row:hover {
        background-color: #f4d2594b;
        color: white;
        text-decoration: none;

        transition-property: color, background-color, box-shadow;
        transition-duration: 0.1s;
        transition-timing-function: ease-in-out;
    }

    input[type="file"] {
        display: none;
    }

    .wholerow {
        padding: 0 5px;
    }
</style>
