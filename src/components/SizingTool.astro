<div class="input-wrapper" id="sizing-tool" style="display: flex;">
    <div class="input-main" id="sizing-tool-main" style="display: flex;">
        <div class="row">
            <div class="input-button fullwidth tab-main">
                <span><b>Main</b></span>
            </div>
            <div class="input-button fullwidth tab-ui" id="st-ui-button">
                <span>UI</span>
            </div>
        </div>

        <div class="row takeheight">
            <h4>Background</h4>
        </div>
        <div class="row takeheight" id="bg-transforms">
            <div class="column">
                <span>X Position</span>
                <input type="number" id="xposbg" step="10" class="fullwidth" value="0" />
            </div>
            <div class="column">
                <span>Y Position</span>
                <input type="number" id="yposbg" step="10" class="fullwidth" value="0" />
            </div>
            <div class="column">
                <span>Scale (%)</span>
                <input type="number" id="scalebg" class="fullwidth" value="120" />
            </div>
            <div class="column">
                <span>Drag</span>
                <div class="input-button square text-button" id="dbg">OFF</div>
            </div>
        </div>
        <div class="row">
            <div class="input-button fullwidth" id="bgautofit">Auto Fit: ON</div>
        </div>

        <div class="row takeheight">
            <h4>Align Background</h4>
        </div>
        <div class="row">
            <div class="input-button fullwidth icon-button" id="align-bg-top"><i class='bx bx-vertical-top'></i></div>
            <div class="input-button fullwidth icon-button" id="align-bg-ymid"><i class='bx bx-vertical-center'></i></div>
            <div class="input-button fullwidth icon-button" id="align-bg-bot"><i class='bx bx-vertical-bottom'></i></div>
        </div>
        <div class="row">
            <div class="input-button fullwidth icon-button" id="align-bg-left"><i class='bx bx-horizontal-left'></i></div>
            <div class="input-button fullwidth icon-button" id="align-bg-xmid"><i class='bx bx-horizontal-center'></i></div>
            <div class="input-button fullwidth icon-button" id="align-bg-right"><i class='bx bx-horizontal-right'></i></div>
        </div>

        <div class="row takeheight" id="ch-transforms">
            <h4>Character</h4>
        </div>
        <div class="row takeheight">
            <div class="column">
                <span>X Position</span>
                <input type="number" id="xposch" step="10" class="fullwidth" value="0" />
            </div>
            <div class="column">
                <span>Y Position</span>
                <input type="number" id="yposch" step="10" class="fullwidth" value="0" />
            </div>
            <div class="column">
                <span>Scale (%)</span>
                <input type="number" id="scalech" class="fullwidth" value="100" />
            </div>
            <div class="column">
                <span>Drag</span>
                <div class="input-button square text-button" id="dch">OFF</div>
            </div>
        </div>

        <div class="row takeheight">
            <h4>Align Character</h4>
        </div>
        <div class="row">
            <div class="input-button fullwidth icon-button" id="align-ch-top"><i class='bx bx-vertical-top'></i></div>
            <div class="input-button fullwidth icon-button" id="align-ch-ymid"><i class='bx bx-vertical-center'></i></div>
            <div class="input-button fullwidth icon-button" id="align-ch-bot"><i class='bx bx-vertical-bottom'></i></div>
        </div>
        <div class="row">
            <div class="input-button fullwidth icon-button" id="align-ch-left"><i class='bx bx-horizontal-left'></i></div>
