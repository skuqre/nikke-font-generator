<script>
    const tabUI = document.getElementsByClassName("tab-ui");
    const tabMain = document.getElementsByClassName("tab-main");

    [...tabUI].forEach((e: HTMLElement) => {
        e.onclick = (_) => {
            document.getElementById("sizing-tool-main").style.display = "none";
            document.getElementById("sizing-tool-ui").style.display = "flex";
        }
    });

    [...tabMain].forEach((e: HTMLElement) => {
        e.onclick = (_) => {
            document.getElementById("sizing-tool-main").style.display = "flex";
            document.getElementById("sizing-tool-ui").style.display = "none";
        }
    });
</script>