<div class="input-fields">
    <table>
        <tr>
            <td>
                <input
                    type="text"
                    id="text"
                    autocomplete="off"
                    placeholder='"NIKKE" text here...'
                />
            </td>
            <td>
                <button id="generate">Generate</button>
            </td>
            <td rowspan="2">
                <input
                    type="color"
                    id="color"
                    autocomplete="off"
                    value="#ffffff"
                />
            </td>
        </tr>
        <tr>
            <td>
                <input
                    type="text"
                    id="subtext"
                    autocomplete="off"
                    placeholder='"Goddess of Victory" text here...'
                />
            </td>
            <td>
                <select id="size" name="Size">
                    <option value="100">100%</option>
                    <option value="75">75%</option>
                    <option value="50">50%</option>
                    <option value="25">25%</option>
                    <option value="10">10%</option>
                </select>
            </td>
        </tr>
    </table>
</div>

<style>
    div.input-fields {
        width: fit-content;
        margin: auto;
        background-color: var(--darkerer);
        border-radius: 4px;
        box-shadow: 0 0 16px black;
    }

    div > table {
        margin: auto;
    }

    input {
        width: 256px;
        height: 32px;
        font-family: "pretendard";
        padding: 4px;
        padding-left: 8px;
        margin: 4px;
        outline: none;
        border: 0;
        background-color: var(--dark);
        border-radius: 4px;
        caret-color: white;
        color: lightgray;
        font-size: 16px;
    }

    input#subtext {
        margin-top: 0;
    }

    select#size {
        width: 90px;
        height: 40px;
        padding-left: 8px;
        font-size: 16px;
        top: -2px; /* perfectionism */
        background-color: var(--darker);
        color: lightgray;
        border: none;
        border-radius: 4px;
        font-family: 'pretendard', sans-serif;
        position: relative;
    }

    button {
        all: unset;
    }

    button:focus {
        outline: revert;
    }

    input#color {
        width: 40px;
        height: 90px;

        margin: 0;
        padding: 0px 2px;
    }

    button#generate {
        width: 90px;
        height: 40px;
        background-color: var(--darker);
        border-radius: 4px;
        color: lightgray;
        font-family: "pretendard";
        text-align: center;

        transition-property: color, background-color, box-shadow;
        transition-duration: 0.1s;
        transition-timing-function: ease-in-out;

        margin-left: 0px;
        margin-right: 4px;
    }

    button#generate:hover {
        background-color: #f4d2594b;
        color: white;
        text-decoration: none;

        transition-property: color, background-color, box-shadow;
        transition-duration: 0.1s;
        transition-timing-function: ease-in-out;
    }
</style>
