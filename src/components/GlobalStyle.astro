<style is:global>
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;900&display=swap');
    @import url("https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/static/pretendard.min.css");

    :root {
        --main-color: #f4d259;
        --lighter: #353535;
        --light: #303030;
        --dark: #252525;
        --darker: #1d1d1d;
        --darkerer: #151515;
        --darkest: #101010;
    }
    
    *:focus {
        outline: none;
    }

    html {
        color: white;
        background-color: var(--darkest);
        font-family: 'pretendard', sans-serif;
        background-size: 32px 32px;
        background-image:
            linear-gradient(to right, var(--darker) 1px, transparent 1px),
            linear-gradient(to bottom, var(--darker) 1px, transparent 1px);
    }
    h1 {
        text-align: center;
        margin: 32px;
    }
    p {
        text-align: center;
        margin: 32px;
    }
    p > i {
        opacity: 0.5;
    }
    a {
        color: var(--main-color);
        text-decoration: none;
    }
    a:hover, a:active {
        text-decoration: underline;
    }
</style>
